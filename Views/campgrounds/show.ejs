<% layout("layout/boilerplate.ejs") -%>
    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <% for (let img of campground.image) { %>
                    <img class="card-img-top" alt="Image of Campground" src="<%= img.url %>">
                    <% } %>
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title %>
                            </h5>
                            <p class="card-text">
                                <%= campground.description %>
                            </p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item text-muted">
                                <%= campground.location %>
                            </li>
                            <li class="list-group-item text-muted">
                                Submitted By: <%= campground.owner.username %>
                            </li>
                            <li class="list-group-item text-muted">$
                                <%= campground.price %>/night
                            </li>
                        </ul>
                        <% if(currentUser && currentUser._id.equals(campground.owner._id)) {%>
                            <div class="card-body">
                                <a class="btn btn-info" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                                <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE"
                                    method="POST">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                            <% } %>
                                <div class="card-footer">
                                    Last Edited: 2 Days ago
                                </div>
            </div>

        </div>
        <div class="col-6">
            <% if (currentUser) { %>
                <h2>Leave a Review</h2>
                <form method="POST" action="/campgrounds/<%= campground._id %>/reviews">
                    <fieldset class="starability-basic">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    <div class="mt-0">
                        <label class="form-label" for="body">Description</label>
                        <div class="input-group">
                            <textarea id="body" class="form-control" name="review[body]"> </textarea>
                        </div>
                    </div>
                    <button class="btn mt-3 mb-3 btn-success"> Submit</button>
                </form>
                <% } %>
                    <% for (let review of campground.reviews) { %>
                        <div class="card mt-3 mb-3">
                            <div class="card-body">

                                <h5>Review Submitted By: <%= review.owner.username %>
                                </h5>
                                <p class="starability-result" data-rating=<%=review.rating%>>
                                    Rating: <%= review.rating %>
                                </p>
                                <div class="card-text">
                                    Review: <%= review.body %>
                                </div>
                                <% if (currentUser && currentUser._id.equals(review.owner._id)) { %>
                                    <form method="POST"
                                        action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE">
                                        <button class="btn btn-danger btn-small mt-3">
                                            Delete
                                        </button>
                                    </form>
                                    <% } %>
                            </div>

                        </div>
                        <% } %>
        </div>
    </div>